@model IEnumerable<SalaryCalculator.Web.Models.EmployeeViewModel>

<h2>Employee List</h2>

@using (Html.BeginForm("Index", "Employee", FormMethod.Get))
{
    <div style="margin-bottom: 20px;">
        @Html.TextBox("id",null, new { type = "number", min = "0"})
        <input type="submit" value="Get Employees" />
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnualSalary)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnualSalary)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
